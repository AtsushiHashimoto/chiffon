<!DOCTYPE html>
<html dir="ltr" lang="ja">
<head>
  <meta charset="<%= app->renderer->encoding %>">
  <title><%= title %><%= title ne '' ? ' - ' : '' %><%= brandname %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  %= stylesheet '/tb/css/bootstrap.min.css'
  %= stylesheet '/css/app.css'
</head>
<body>
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a class="brand" href="<%= url_for '/' %>"><%= brandname %></a>
    <div class="nav-collapse">
      <ul class="nav pull-right">
      % my $user_id = session('user_id') || '';
      % if ( $user_id ne '' ) {
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= $user_id %>でログイン中 <b><span class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "ログアウト" => "/logout" %></li>
          </ul>
        </li>
      % }
      </ul>
    </div>
  </div>
</div>

<div class="container">
<div class="row">
<header class="jumbotron subhead">
  <h1 class="span9"><%= title %></h1>
</header>
</div>

%= include 'widgets/alert';
%= tag div => (class => 'row') => begin
  %= content
% end

<footer id="copyright" class="footer">
  <small>&copy; <%= brandname %> Powered by <a href="http://www.nishimiyahara.net">IT Office 西宮原</a></small>
</footer>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
window.jQuery || document.write('<script src="<%= url_for(q{/jquery/jquery-1.8.3.min.js}) %>"><\/script>');
</script>
%= javascript '/tb/js/bootstrap.min.js'
%= javascript '/js/app.js'
</body>
</html>
